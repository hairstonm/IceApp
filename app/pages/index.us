<!DOCTYPE html>
<html>
  <head>
    <title><%= pkg.name %></title>

    <link rel="stylesheet" type="text/css" href="<%= css %>" media="all" />
  </head>
  <body>

    <script type="text/javascript" src="<%= js %>"></script>
    <div ng-app ='app'>
    <div ng-controller="gameIncrementer">
    	<mission>
    	<div id="resources">
    	    <span ng-repeat="(key,value) in resources" id="{{key}}" class="resource">
    	        {{value}}
    	    </span>
        </div>
        <div id="combat">
            <span id="monsterName">{{monsterName}}</span>
            <span id="monsterHealth">{{monsterHealth}}</span>
            <span id="monsterDamage">{{monsterDamage}}</span>
         </div>
        <button ng-click="toggleMissionStatus()" id="missionButton">{{missionButtonText}}</button>
      </mission>
      <research>
        <button>Research Armor</button>
      </research>
      <div id="messageLog" >
        <div ng-repeat="message in missionLog track by $index">
             {{ message }}
        </div>
      </div>
    </div>
  </body>
</html>
